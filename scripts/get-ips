#!/bin/bash

TESTNET_CHANNEL=$(terraform workspace show)

# https://betterdev.blog/minimal-safe-bash-script-template/
set -Eeuo pipefail
trap cleanup SIGINT SIGTERM ERR EXIT

script_dir=$(cd "$(dirname "${BASH_SOURCE[0]}")" &>/dev/null && pwd -P)

cleanup() {
  trap - SIGINT SIGTERM ERR EXIT
  # script cleanup here
}

# source "$script_dir/../scripts/droplet-operations"

aws s3 cp "s3://sn_node/testnet_tool/$TESTNET_CHANNEL-ip-list" "$TESTNET_CHANNEL-ip-list"
aws s3 cp "s3://sn_node/testnet_tool/$TESTNET_CHANNEL-ip-list" "$TESTNET_CHANNEL-client-ip"
aws s3 cp "s3://sn_node/testnet_tool/$TESTNET_CHANNEL-genesis-ip" "$TESTNET_CHANNEL-genesis-ip"
aws s3 cp "s3://sn_node/testnet_tool/$TESTNET_CHANNEL-network-contacts" "$TESTNET_CHANNEL-network-contacts"
./scripts/register_keys.sh

cleanup
